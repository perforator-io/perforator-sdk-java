<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Example Performance Testing Suite - Upload Flow">
    
    <listeners>
        <listener class-name="com.example.PerSuiteRemoteWebDriverManager" />
    </listeners>
    
    <test name="Verify upload without any delay">
        <parameter name="page" value="/" />
        <parameter name="delay" value="0ms" />
        <parameter name="file" value="example_upload_file.txt" />
        <classes>
            <class name="com.example.UploadTest"/>
        </classes>
    </test>
    
    <test name="Verify upload with 500ms delay">
        <parameter name="page" value="/" />
        <parameter name="delay" value="500ms" />
        <parameter name="file" value="example_upload_file.txt" />
        <classes>
            <class name="com.example.UploadTest"/>
        </classes>
    </test>
    
    <test name="Verify upload with 2000ms delay">
        <parameter name="page" value="/" />
        <parameter name="delay" value="2000ms" />
        <parameter name="file" value="example_upload_file.txt" />
        <classes>
            <class name="com.example.UploadTest"/>
        </classes>
    </test>
    
</suite>
